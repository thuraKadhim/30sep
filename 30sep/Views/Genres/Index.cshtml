@model IEnumerable<_30sep.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Genres</h2>

<p>
    @if(User.Identity.IsAuthenticated)
    {
      @Html.ActionLink("Create New", "Create")
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genredescirption)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genredescirption)
        </td>
        <td>
            <div class="col-md-4">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-4">
                        @Html.ActionLink("Edit", "Edit", new { id = item.GenreId })

                        </div>
                    <div class="col-md-4">
                      @Html.ActionLink("Delete", "Delete", new { id = item.GenreId })
                         </div>
                }
                <div class="col-md-4">

                    @Html.ActionLink("Details", "Details", new { id = item.GenreId })
                    </div>
                </div>

        </td>
    </tr>
}

</table>
